@using FFXIV_Craft_Architect.Web.Services
@inject AppState AppState

<MudDialog Style="min-width: 600px; max-width: 800px;">
    <DialogContent>
        <MudText Typo="Typo.h6" Class="mb-4">Application Logs</MudText>
        
        <div style="background: #1e1e1e; border-radius: 4px; padding: 16px; max-height: 400px; overflow-y: auto; font-family: monospace; font-size: 12px;">
            <div style="color: #888;">
                [INFO] Application initialized<br/>
                [INFO] Loaded @AppState.SavedPlans.Count saved plans<br/>
                [INFO] Current data center: @AppState.SelectedDataCenter<br/>
                [INFO] Auto-save: @(AppState.IsAutoSaveEnabled ? "enabled" : "disabled")<br/>
                @if (AppState.CurrentPlan != null)
                {
                    <span>[INFO] Active plan: @AppState.CurrentPlan.Name with @AppState.CurrentPlan.RootItems.Count items</span><br/>
                }
                @if (AppState.LastAutoSave.HasValue)
                {
                    <span>[INFO] Last auto-save: @AppState.LastAutoSave.Value.ToString("g")</span><br/>
                }
            </div>
        </div>
        
        <MudText Typo="Typo.caption" Color="Color.Secondary" Class="mt-4 d-block">
            Note: Detailed logs are available in the browser console (F12)
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Close">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    
    private void Close()
    {
        MudDialog.Close();
    }
}

@using FFXIV_Craft_Architect.Web.Services
@inject IndexedDbService IndexedDb
@inject ISnackbar Snackbar

<MudDialog>
    <DialogContent>
        @if (_isLoading)
        {
            <MudProgressLinear Indeterminate="true" Class="my-4" />
        }
        else if (_plans.Count == 0)
        {
            <MudText Typo="Typo.body1" Align="Align.Center" Class="py-8">
                No saved plans found.
            </MudText>
        }
        else
        {
            <MudList T="StoredPlan" Dense="true" Style="max-height: 400px; overflow-y: auto;">
                @foreach (var plan in _plans)
                {
                    <MudListItem T="StoredPlan" Class="py-2">
                        <div class="d-flex align-center justify-space-between">
                            <div class="flex-grow-1">
                                <MudText Typo="Typo.subtitle1">@plan.Name</MudText>
                                <MudText Typo="Typo.caption" Color="Color.Secondary">
                                    @plan.DataCenter • @plan.ProjectItems.Count items • @plan.SavedAt.ToLocalTime().ToString("g")
                                </MudText>
                            </div>
                            <div class="d-flex gap-2">
                                <MudButton Size="Size.Small" 
                                           Color="Color.Primary" 
                                           Variant="Variant.Filled"
                                           OnClick="() => LoadPlan(plan)">
                                    Load
                                </MudButton>
                                <MudButton Size="Size.Small" 
                                           Color="Color.Error" 
                                           Variant="Variant.Outlined"
                                           OnClick="() => DeletePlan(plan)">
                                    <MudIcon Icon="@Icons.Material.Filled.Delete" Size="Size.Small" />
                                </MudButton>
                            </div>
                        </div>
                    </MudListItem>
                    <MudDivider />
                }
            </MudList>
        }
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Close</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    
    private List<StoredPlan> _plans = new();
    private bool _isLoading = true;
    
    protected override async Task OnInitializedAsync()
    {
        await LoadPlansAsync();
    }
    
    private async Task LoadPlansAsync()
    {
        _isLoading = true;
        StateHasChanged();
        
        try
        {
            _plans = await IndexedDb.LoadAllPlansAsync();
            // Filter out autosave
            _plans = _plans.Where(p => p.Id != "autosave").ToList();
        }
        catch (Exception ex)
        {
            Snackbar.Add($"Failed to load plans: {ex.Message}", Severity.Error);
        }
        finally
        {
            _isLoading = false;
        }
    }
    
    private void LoadPlan(StoredPlan plan)
    {
        MudDialog.Close(DialogResult.Ok(plan.Id));
    }
    
    private async Task DeletePlan(StoredPlan plan)
    {
        var result = await IndexedDb.DeletePlanAsync(plan.Id);
        if (result)
        {
            Snackbar.Add("Plan deleted", Severity.Success);
            await LoadPlansAsync();
        }
        else
        {
            Snackbar.Add("Failed to delete plan", Severity.Error);
        }
    }
    
    private void Cancel()
    {
        MudDialog.Cancel();
    }
}

<Window x:Class="FFXIVCraftArchitect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="FFXIV Craft Architect v0.1.0"
        Width="1600"
        Height="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e">

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar -->
        <Border Grid.Row="0" 
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0,0,0,1"
                Padding="16,12">
            <TextBlock Text="FFXIV Craft Architect" 
                       FontSize="16"
                       FontWeight="SemiBold"
                       VerticalAlignment="Center"/>
        </Border>

        <!-- Main Content -->
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="280" />
                <ColumnDefinition Width="350" />
                <ColumnDefinition Width="*" />
            </Grid.ColumnDefinitions>

            <!-- Left Sidebar: Controls -->
            <Border Grid.Column="0" 
                    Background="Transparent" 
                    BorderBrush="Transparent"
                    BorderThickness="0,0,1,0"
                    Padding="16,0,16,16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Sync Section -->
                        <ui:Button x:Name="SyncButton"
                                   Content="Sync Teamcraft Inventory"
                                   Appearance="Primary"
                                   Icon="{ui:SymbolIcon ArrowSyncCircle24}"
                                   HorizontalAlignment="Stretch"
                                   Margin="0,0,0,8"
                                   Click="OnSyncInventory"/>

                        <!-- Live Mode Toggle -->
                        <ui:ToggleSwitch x:Name="LiveSwitch"
                                         Content="Live Mode (Packet Capture)"
                                         Margin="0,8"
                                         Checked="OnLiveModeToggled"
                                         Unchecked="OnLiveModeToggled"/>

                        <TextBlock x:Name="SyncStatus"
                                   Text="Inventory: Not Synced"
                                   FontSize="12"
                                   Foreground="LightGray"
                                   Margin="0,0,0,20"/>

                        <!-- Data Center -->
                        <TextBlock Text="Data Center:" 
                                   Margin="0,10,0,4"/>
                        <ComboBox x:Name="DcCombo"
                                  IsEditable="False"
                                  SelectionChanged="OnDataCenterSelected"/>

                        <TextBlock Text="World:" 
                                   Margin="0,10,0,4"/>
                        <ComboBox x:Name="WorldCombo"
                                  IsEditable="False"/>

                        <!-- Item Search -->
                        <TextBlock Text="Item Name:" 
                                   Margin="0,20,0,4"/>
                        <ui:TextBox x:Name="ItemSearch"
                                    PlaceholderText="Enter item..."
                                    KeyDown="OnItemSearchKeyDown"/>

                        <ui:Button Content="Search"
                                   Icon="{ui:SymbolIcon Search24}"
                                   Margin="0,8"
                                   HorizontalAlignment="Stretch"
                                   Click="OnSearchItem"/>

                        <!-- Action Buttons -->
                        <ui:Button Content="View Logs"
                                   Appearance="Secondary"
                                   Margin="0,20,0,4"
                                   HorizontalAlignment="Stretch"
                                   Click="OnViewLogs"/>

                        <ui:Button Content="View Inventory"
                                   Appearance="Secondary"
                                   Margin="0,4"
                                   HorizontalAlignment="Stretch"
                                   Click="OnViewInventory"/>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <!-- Middle Panel: Search Results and Project Items -->
            <Border Grid.Column="1" 
                    Background="Transparent"
                    BorderBrush="Transparent"
                    BorderThickness="1,0,1,0"
                    Padding="16,0,16,16">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Search Results -->
                    <Border Grid.Row="0" 
                            Background="#2d2d2d"
                            CornerRadius="4"
                            Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Search Results" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            
                            <ListBox Grid.Row="1"
                                     x:Name="SearchResults"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     SelectionChanged="OnItemSelected"/>
                            
                            <ui:Button Grid.Row="2"
                                       x:Name="AddToProjectButton"
                                       Content="Add to Project"
                                       Appearance="Primary"
                                       Margin="0,8,0,0"
                                       HorizontalAlignment="Stretch"
                                       IsEnabled="False"
                                       Click="OnAddToProject"/>
                        </Grid>
                    </Border>

                    <!-- Divider -->
                    <Border Grid.Row="1" Height="16" Background="Transparent"/>

                    <!-- Project Items -->
                    <Border Grid.Row="2" 
                            Background="#2d2d2d"
                            CornerRadius="4"
                            Padding="8">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="Auto" />
                            </Grid.RowDefinitions>
                            
                            <TextBlock Text="Project Items" 
                                       FontWeight="SemiBold"
                                       Margin="0,0,0,8"/>
                            
                            <!-- Project Items List with Editable Quantity -->
                            <ListBox Grid.Row="1"
                                     x:Name="ProjectList"
                                     Background="Transparent"
                                     BorderThickness="0">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="4" Margin="0,2">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="70" />
                                                    <ColumnDefinition Width="30" />
                                                </Grid.ColumnDefinitions>
                                                
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding Name}" 
                                                           VerticalAlignment="Center"
                                                           TextTrimming="CharacterEllipsis"/>
                                                
                                                <TextBox Grid.Column="1"
                                                         Text="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                         VerticalAlignment="Center"
                                                         HorizontalAlignment="Stretch"
                                                         HorizontalContentAlignment="Center"
                                                         GotFocus="OnQuantityGotFocus"
                                                         PreviewTextInput="OnQuantityPreviewTextInput"
                                                         LostFocus="OnQuantityChanged"/>
                                                
                                                <Button Grid.Column="2"
                                                        Content="Ã—"
                                                        Width="26"
                                                        Height="26"
                                                        Margin="4,0,0,0"
                                                        Click="OnRemoveProjectItem"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                            
                            <ui:Button Grid.Row="2"
                                       x:Name="BuildPlanButton"
                                       Content="Build Project Plan"
                                       Appearance="Success"
                                       Margin="0,8,0,0"
                                       HorizontalAlignment="Stretch"
                                       IsEnabled="False"
                                       Click="OnBuildProjectPlan"/>
                            
                            <!-- Save/Load/Delete buttons -->
                            <Grid Grid.Row="3" Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <ui:Button Grid.Column="0"
                                           Content="Save"
                                           Appearance="Secondary"
                                           HorizontalAlignment="Stretch"
                                           Click="OnSavePlan"/>
                                
                                <ui:Button Grid.Column="2"
                                           Content="Load"
                                           Appearance="Secondary"
                                           HorizontalAlignment="Stretch"
                                           Click="OnLoadPlan"/>
                                
                                <ui:Button Grid.Column="4"
                                           Content="Rename"
                                           Appearance="Secondary"
                                           HorizontalAlignment="Stretch"
                                           Click="OnRenamePlan"/>
                            </Grid>
                            
                            <!-- Teamcraft Import/Export -->
                            <Grid Grid.Row="4" Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <ui:Button Grid.Column="0"
                                           Content="Import TC"
                                           Appearance="Secondary"
                                           HorizontalAlignment="Stretch"
                                           ToolTip="Import from Teamcraft Copy as Text"
                                           Click="OnImportTeamcraft"/>
                                
                                <ui:Button Grid.Column="2"
                                           Content="Export TC"
                                           Appearance="Secondary"
                                           HorizontalAlignment="Stretch"
                                           ToolTip="Export to Teamcraft URL (copies to clipboard)"
                                           Click="OnExportTeamcraft"/>
                            </Grid>
                            
                            <!-- Additional Export Options -->
                            <Grid Grid.Row="5" Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="4" />
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <ui:Button Grid.Column="0"
                                           Content="Copy Text"
                                           Appearance="Secondary"
                                           HorizontalAlignment="Stretch"
                                           ToolTip="Copy plan as plain text to clipboard"
                                           Click="OnExportPlainText"/>
                                
                                <ui:Button Grid.Column="2"
                                           Content="Export CSV"
                                           Appearance="Secondary"
                                           HorizontalAlignment="Stretch"
                                           ToolTip="Export shopping list as CSV"
                                           Click="OnExportCsv"/>
                            </Grid>
                            
                            <!-- Price Fetching -->
                            <Grid Grid.Row="6" Margin="0,8,0,0">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                </Grid.ColumnDefinitions>
                                
                                <ui:Button Grid.Column="0"
                                           x:Name="FetchPricesButton"
                                           Content="Fetch Prices"
                                           Appearance="Primary"
                                           HorizontalAlignment="Stretch"
                                           ToolTip="Fetch market prices from Universalis and vendor prices from Garland"
                                           Click="OnFetchPrices"
                                           IsEnabled="False"/>
                            </Grid>
                        </Grid>
                    </Border>
                </Grid>
            </Border>

            <!-- Right Panel: Recipe Plan with Shopping List -->
            <Border Grid.Column="2" Padding="16,0,16,16">
                <ui:TabView>
                    <ui:TabViewItem Header="Recipe Plan">
                        <ScrollViewer VerticalScrollBarVisibility="Auto">
                            <StackPanel>
                                <!-- Recipe Tree -->
                                <Border Background="#2d2d2d"
                                        CornerRadius="4"
                                        Padding="8"
                                        Margin="0,0,0,8">
                                    <TreeView x:Name="RecipeTree"
                                              Background="Transparent"
                                              BorderThickness="0">
                                        <TreeView.Resources>
                                            <Style TargetType="TreeViewItem">
                                                <Setter Property="IsExpanded" Value="True" />
                                            </Style>
                                        </TreeView.Resources>
                                    </TreeView>
                                </Border>
                                
                                <!-- Shopping List -->
                                <Border Background="#2d2d2d"
                                        CornerRadius="4"
                                        Padding="8">
                                    <Grid>
                                        <Grid.RowDefinitions>
                                            <RowDefinition Height="Auto" />
                                            <RowDefinition Height="Auto" />
                                        </Grid.RowDefinitions>
                                        
                                        <TextBlock Grid.Row="0"
                                                   Text="Shopping List (Materials to Acquire)"
                                                   FontWeight="SemiBold"
                                                   Margin="0,0,0,4"/>
                                        
                                        <ListBox Grid.Row="1"
                                                 x:Name="ShoppingList"
                                                 Background="Transparent"
                                                 BorderThickness="0">
                                            <ListBox.ItemTemplate>
                                                <DataTemplate>
                                                    <Grid>
                                                        <Grid.ColumnDefinitions>
                                                            <ColumnDefinition Width="30" />
                                                            <ColumnDefinition Width="*" />
                                                            <ColumnDefinition Width="60" />
                                                            <ColumnDefinition Width="80" />
                                                        </Grid.ColumnDefinitions>
                                                        
                                                        <TextBlock Grid.Column="0"
                                                                   Text="{Binding IconId, StringFormat={}{0:D6}}"
                                                                   FontSize="10"
                                                                   Foreground="Gray"/>
                                                        
                                                        <TextBlock Grid.Column="1"
                                                                   Text="{Binding Name}"
                                                                   VerticalAlignment="Center"/>
                                                        
                                                        <TextBlock Grid.Column="2"
                                                                   Text="{Binding TotalQuantity, StringFormat=x{0}}"
                                                                   HorizontalAlignment="Right"
                                                                   VerticalAlignment="Center"/>
                                                        
                                                        <TextBlock Grid.Column="3"
                                                                   Text="{Binding TotalCost, StringFormat={}{0:N0}g}"
                                                                   HorizontalAlignment="Right"
                                                                   VerticalAlignment="Center"
                                                                   Foreground="Gold"/>
                                                    </Grid>
                                                </DataTemplate>
                                            </ListBox.ItemTemplate>
                                        </ListBox>
                                    </Grid>
                                </Border>
                            </StackPanel>
                        </ScrollViewer>
                    </ui:TabViewItem>
                    
                    <ui:TabViewItem Header="Market Logistics">
                        <Border Background="#2d2d2d"
                                CornerRadius="4"
                                Padding="8">
                            <ScrollViewer>
                                <StackPanel x:Name="MarketCards">
                                    <!-- Market cards will be added dynamically -->
                                </StackPanel>
                            </ScrollViewer>
                        </Border>
                    </ui:TabViewItem>
                </ui:TabView>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="2" 
                Background="Transparent"
                BorderBrush="Transparent"
                BorderThickness="0,1,0,0"
                Padding="16,8">
            <TextBox x:Name="StatusLabel" 
                     Text="Ready"
                     Foreground="LightGray"
                     Background="Transparent"
                     BorderThickness="0"
                     IsReadOnly="True"
                     IsReadOnlyCaretVisible="True"/>
        </Border>
    </Grid>
</Window>

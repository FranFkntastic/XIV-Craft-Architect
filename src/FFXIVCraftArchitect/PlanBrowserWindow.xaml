<Window x:Class="FFXIVCraftArchitect.PlanBrowserWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="Load Plan"
        Width="600"
        Height="500"
        WindowStartupLocation="CenterOwner"
        Background="#1e1e1e">

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Header -->
        <TextBlock Grid.Row="0"
                   Text="Saved Plans"
                   FontSize="20"
                   FontWeight="Bold"
                   Margin="0,0,0,16"/>

        <!-- Plan List -->
        <Border Grid.Row="1"
                Background="#2d2d2d"
                CornerRadius="4"
                Padding="8">
            <ListBox x:Name="PlansListBox"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionChanged="OnPlanSelected">
                <ListBox.ItemTemplate>
                    <DataTemplate>
                        <Border Padding="8" Margin="0,2">
                            <Grid>
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="Auto" />
                                </Grid.ColumnDefinitions>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto" />
                                    <RowDefinition Height="Auto" />
                                </Grid.RowDefinitions>

                                <TextBlock Grid.Row="0" Grid.Column="0"
                                           Text="{Binding Name}"
                                           FontWeight="SemiBold"
                                           FontSize="14"/>

                                <TextBlock Grid.Row="1" Grid.Column="0"
                                           Text="{Binding ItemCount, StringFormat={}{0} items}"
                                           Foreground="Gray"
                                           FontSize="12"
                                           Margin="0,2,0,0"/>

                                <TextBlock Grid.Row="0" Grid.RowSpan="2" Grid.Column="1"
                                           Text="{Binding ModifiedAt, StringFormat={}{0:yyyy-MM-dd HH:mm}}"
                                           Foreground="Gray"
                                           FontSize="11"
                                           VerticalAlignment="Center"
                                           Margin="16,0,0,0"/>
                            </Grid>
                        </Border>
                    </DataTemplate>
                </ListBox.ItemTemplate>
            </ListBox>
        </Border>

        <!-- Buttons -->
        <Grid Grid.Row="2" Margin="0,16,0,0">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="*" />
                <ColumnDefinition Width="Auto" />
                <ColumnDefinition Width="8" />
                <ColumnDefinition Width="Auto" />
            </Grid.ColumnDefinitions>

            <ui:Button Grid.Column="0"
                       Content="Delete"
                       Appearance="Danger"
                       Click="OnDeletePlan"
                       x:Name="DeleteButton"
                       IsEnabled="False"/>

            <ui:Button Grid.Column="2"
                       Content="Cancel"
                       Appearance="Secondary"
                       Click="OnCancel"/>

            <ui:Button Grid.Column="4"
                       Content="Load"
                       Appearance="Primary"
                       Click="OnLoadPlan"
                       x:Name="LoadButton"
                       IsEnabled="False"/>
        </Grid>
    </Grid>
</Window>

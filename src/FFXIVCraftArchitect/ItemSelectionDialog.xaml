<Window x:Class="FFXIVCraftArchitect.ItemSelectionDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Select Item"
        Width="400"
        Height="500"
        WindowStartupLocation="CenterOwner"
        Background="#1e1e1e"
        ResizeMode="NoResize">
    
    <Window.Resources>
        <SolidColorBrush x:Key="GoldAccentBrush" Color="#d4a73a"/>
    </Window.Resources>

    <Grid Margin="16">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0"
                   x:Name="DialogTitle"
                   Text="Select an item:"
                   FontSize="14"
                   FontWeight="SemiBold"
                   Foreground="{StaticResource GoldAccentBrush}"
                   Margin="0,0,0,12"/>

        <Border Grid.Row="1"
                Background="#2d2d2d"
                CornerRadius="4"
                BorderBrush="{StaticResource GoldAccentBrush}"
                BorderThickness="1">
            <ListBox x:Name="ItemsList"
                     Background="Transparent"
                     BorderThickness="0"
                     SelectionChanged="OnSelectionChanged"
                     MouseDoubleClick="OnDoubleClick">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="Padding" Value="12,8"/>
                        <Setter Property="Foreground" Value="White"/>
                        <Style.Triggers>
                            <Trigger Property="IsSelected" Value="True">
                                <Setter Property="Background" Value="{StaticResource GoldAccentBrush}"/>
                                <Setter Property="Foreground" Value="#1a1a1a"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>
        </Border>

        <StackPanel Grid.Row="2"
                    Orientation="Horizontal"
                    HorizontalAlignment="Right"
                    Margin="0,16,0,0">
            <Button Content="Cancel"
                    Width="80"
                    Height="32"
                    Margin="0,0,8,0"
                    Click="OnCancel"
                    Background="#3d3d3d"
                    Foreground="White"
                    BorderBrush="#555555"/>
            <Button Content="Select"
                    Width="80"
                    Height="32"
                    Click="OnSelect"
                    Background="{StaticResource GoldAccentBrush}"
                    Foreground="#1a1a1a"
                    FontWeight="SemiBold"
                    IsEnabled="False"
                    x:Name="SelectButton"/>
        </StackPanel>
    </Grid>
</Window>

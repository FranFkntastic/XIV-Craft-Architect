@using FFXIVCraftArchitect.Web.Services
@inject AppState AppState

<MudDialog>
    <DialogContent>
        <MudTextField @bind-Value="_planName" 
                      Label="Plan Name" 
                      Variant="Variant.Outlined"
                      Placeholder="Enter plan name..."
                      AutoFocus="true"
                      @onkeyup="OnKeyUp" />
        <MudText Typo="Typo.caption" Class="mt-2 d-block">
            Saving @AppState.ProjectItems.Count items from @AppState.SelectedDataCenter
        </MudText>
    </DialogContent>
    <DialogActions>
        <MudButton OnClick="Cancel">Cancel</MudButton>
        <MudButton Color="Color.Primary" OnClick="Save" Disabled="string.IsNullOrWhiteSpace(_planName)">Save</MudButton>
    </DialogActions>
</MudDialog>

@code {
    [CascadingParameter] MudDialogInstance MudDialog { get; set; } = null!;
    
    private string _planName = "";
    
    protected override void OnInitialized()
    {
        // Default name based on date
        _planName = $"Plan_{DateTime.Now:yyyyMMdd_HHmm}";
        if (AppState.CurrentPlan?.Name != null)
        {
            _planName = AppState.CurrentPlan.Name;
        }
    }
    
    private void OnKeyUp(KeyboardEventArgs e)
    {
        if (e.Key == "Enter" && !string.IsNullOrWhiteSpace(_planName))
        {
            Save();
        }
    }
    
    private void Save()
    {
        MudDialog.Close(DialogResult.Ok(_planName.Trim()));
    }
    
    private void Cancel()
    {
        MudDialog.Cancel();
    }
}

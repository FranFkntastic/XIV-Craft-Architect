<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml">

    <!--
      Canonical design-language resources.
      New and touched code should prefer Brush.* and Color.* keys below.
    -->

    <!-- Accent -->
    <Color x:Key="Color.Accent.Primary">#d4a73a</Color>
    <Color x:Key="Color.Accent.Primary.Faded">#1ed4a73a</Color>
    <SolidColorBrush x:Key="Brush.Accent.Primary" Color="{StaticResource Color.Accent.Primary}"/>
    <SolidColorBrush x:Key="Brush.Accent.Primary.Faded" Color="{StaticResource Color.Accent.Primary.Faded}"/>

    <!-- Text -->
    <SolidColorBrush x:Key="Brush.Text.Primary" Color="#ffffff"/>
    <SolidColorBrush x:Key="Brush.Text.Secondary" Color="#aaaaaa"/>
    <SolidColorBrush x:Key="Brush.Text.Muted" Color="#888888"/>
    <SolidColorBrush x:Key="Brush.Text.OnAccent" Color="#1a1a1a"/>

    <!-- Surface -->
    <SolidColorBrush x:Key="Brush.Surface.Window" Color="#1e1e1e"/>
    <SolidColorBrush x:Key="Brush.Surface.Window.Darker" Color="#1a1a1a"/>
    <SolidColorBrush x:Key="Brush.Surface.Panel" Color="#252525"/>
    <SolidColorBrush x:Key="Brush.Surface.Card" Color="#2d2d2d"/>
    <SolidColorBrush x:Key="Brush.Surface.Card.Alt" Color="#333333"/>
    <SolidColorBrush x:Key="Brush.Surface.Card.Vendor" Color="#3e4a2d"/>
    <SolidColorBrush x:Key="Brush.Surface.Card.Market" Color="#2d3d4a"/>
    <SolidColorBrush x:Key="Brush.Surface.Card.Untradeable" Color="#4a3d2d"/>
    <SolidColorBrush x:Key="Brush.Surface.Card.Error" Color="#4a2d2d"/>
    <SolidColorBrush x:Key="Brush.Surface.Card.Placeholder" Color="#3d3e2d"/>
    <SolidColorBrush x:Key="Brush.Surface.Card.Summary" Color="#3d3d3d"/>

    <!-- Status -->
    <SolidColorBrush x:Key="Brush.Status.Success" Color="#4caf50"/>
    <SolidColorBrush x:Key="Brush.Status.Warning" Color="#ff9800"/>
    <SolidColorBrush x:Key="Brush.Status.Error" Color="#ff6b6b"/>
    <SolidColorBrush x:Key="Brush.Status.Info" Color="#87cefa"/>

    <!-- World -->
    <SolidColorBrush x:Key="Brush.World.Congested" Color="#3d2d2d"/>
    <SolidColorBrush x:Key="Brush.World.Home" Color="#3d3520"/>
    <SolidColorBrush x:Key="Brush.World.Recommended" Color="#2d4a3e"/>
    <SolidColorBrush x:Key="Brush.World.Default" Color="#2d2d2d"/>

    <!-- Border -->
    <SolidColorBrush x:Key="Brush.Border.Default" Color="#4d4d4d"/>
    <SolidColorBrush x:Key="Brush.Border.Accent" Color="{StaticResource Color.Accent.Primary}"/>

    <!-- Legacy compatibility keys (existing code path, migrate progressively) -->
    <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2d2d2d"/>
    <SolidColorBrush x:Key="CardBackgroundAltBrush" Color="#333333"/>
    <SolidColorBrush x:Key="CardBackgroundVendorBrush" Color="#3e4a2d"/>
    <SolidColorBrush x:Key="CardBackgroundMarketBrush" Color="#2d3d4a"/>
    <SolidColorBrush x:Key="CardBackgroundErrorBrush" Color="#4a2d2d"/>
    <SolidColorBrush x:Key="CardBackgroundUntradeableBrush" Color="#4a3d2d"/>
    <SolidColorBrush x:Key="CardBackgroundPlaceholderBrush" Color="#3d3e2d"/>
    <SolidColorBrush x:Key="CardBackgroundSummaryBrush" Color="#3d3d3d"/>

    <SolidColorBrush x:Key="WorldBackgroundCongestedBrush" Color="#3d2d2d"/>
    <SolidColorBrush x:Key="WorldBackgroundHomeBrush" Color="#3d3520"/>
    <SolidColorBrush x:Key="WorldBackgroundRecommendedBrush" Color="#2d4a3e"/>
    <SolidColorBrush x:Key="WorldBackgroundDefaultBrush" Color="#2d2d2d"/>

    <SolidColorBrush x:Key="NodeBackgroundRootBrush" Color="#252525"/>

    <SolidColorBrush x:Key="TextPrimaryBrush" Color="#ffffff"/>
    <SolidColorBrush x:Key="TextSecondaryBrush" Color="#aaaaaa"/>
    <SolidColorBrush x:Key="TextMutedBrush" Color="#888888"/>
    <SolidColorBrush x:Key="TextDarkBrush" Color="#1a1a1a"/>

    <SolidColorBrush x:Key="AccentGoldBrush" Color="#d4a73a"/>
    <SolidColorBrush x:Key="AccentGoldLightBrush" Color="#d4a73a"/>
    <SolidColorBrush x:Key="SuccessGreenBrush" Color="#4caf50"/>
    <SolidColorBrush x:Key="ErrorRedBrush" Color="#ff6b6b"/>
    <SolidColorBrush x:Key="WarningOrangeBrush" Color="#ff9800"/>
    <SolidColorBrush x:Key="IndianRedBrush" Color="#cd5c5c"/>
    <SolidColorBrush x:Key="LightGreenBrush" Color="#90ee90"/>
    <SolidColorBrush x:Key="LightSkyBlueBrush" Color="#87cefa"/>
    <SolidColorBrush x:Key="LightYellowBrush" Color="#ffffe0"/>
    <SolidColorBrush x:Key="LightCoralBrush" Color="#f08080"/>
    <SolidColorBrush x:Key="LightGrayBrush" Color="#d3d3d3"/>
    <SolidColorBrush x:Key="GrayBrush" Color="#808080"/>
    <SolidColorBrush x:Key="DarkGrayBrush" Color="#a9a9a9"/>

    <SolidColorBrush x:Key="WindowBackgroundBrush" Color="#1e1e1e"/>
    <SolidColorBrush x:Key="WindowBackgroundDarkBrush" Color="#1a1a1a"/>
    <SolidColorBrush x:Key="PanelBackgroundBrush" Color="#252525"/>
    <SolidColorBrush x:Key="MutedAccentBrush" Color="#3d3d3d"/>
    <SolidColorBrush x:Key="MutedAccentLightBrush" Color="#4d4d4d"/>

    <SolidColorBrush x:Key="ButtonActiveBackgroundBrush" Color="#3d3d3d"/>
    <SolidColorBrush x:Key="ButtonTransparentBrush" Color="#00000000"/>

    <SolidColorBrush x:Key="SystemWhiteBrush" Color="#ffffff"/>
    <SolidColorBrush x:Key="SystemBlackBrush" Color="#000000"/>
    <SolidColorBrush x:Key="SystemTransparentBrush" Color="#00000000"/>
</ResourceDictionary>

<Application x:Class="FFXIV_Craft_Architect.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
             xmlns:local="clr-namespace:FFXIV_Craft_Architect"
             Startup="OnStartup">
    <Application.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ui:ThemesDictionary Theme="Dark" />
                <ui:ControlsDictionary />
                <ResourceDictionary Source="Resources/ThemeColors.xaml" />
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Default accent resources - updated dynamically by ThemeService -->
            <Color x:Key="Color.Accent.Primary">#d4a73a</Color>
            <SolidColorBrush x:Key="Brush.Accent.Primary" Color="#d4a73a"/>
            <Color x:Key="Color.Accent.Primary.Faded">#1ed4a73a</Color>
            <SolidColorBrush x:Key="Brush.Accent.Primary.Faded" Color="#1ed4a73a"/>
            <SolidColorBrush x:Key="Brush.Border.Accent" Color="#d4a73a"/>

            <!-- Back-compat resources -->
            <Color x:Key="AccentColor">#d4a73a</Color>
            <SolidColorBrush x:Key="AccentBrush" Color="#d4a73a"/>
            <Color x:Key="AccentColorFaded">#1ed4a73a</Color>
            <SolidColorBrush x:Key="AccentBrushFaded" Color="#1ed4a73a"/>
            <SolidColorBrush x:Key="AccentBorderBrush" Color="#d4a73a"/>
            
            <!-- Converters -->
            <local:StringToBrushConverter x:Key="StringToBrushConverter"/>
        </ResourceDictionary>
    </Application.Resources>
</Application>

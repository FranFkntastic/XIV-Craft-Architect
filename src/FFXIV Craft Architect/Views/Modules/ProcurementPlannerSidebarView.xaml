<UserControl x:Class="FFXIV_Craft_Architect.Views.Modules.ProcurementPlannerSidebarView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml">
    <ScrollViewer VerticalScrollBarVisibility="Auto">
        <StackPanel x:Name="ProcurementPlannerLeftPanel" Visibility="Collapsed">
            <TextBlock Text="Procurement Plan"
                       FontSize="16"
                       FontWeight="SemiBold"
                       Foreground="{StaticResource Brush.Accent.Primary}"
                       Margin="0,0,0,16"/>

            <TextBlock Text="Optimized shopping plan with world recommendations."
                       Foreground="{StaticResource Brush.Text.Secondary}"
                       TextWrapping="Wrap"
                       Margin="0,0,0,16"/>

            <TextBlock Text="Sort By:"
                       Margin="0,0,0,4"
                       Foreground="{StaticResource Brush.Text.Secondary}"/>
            <ComboBox x:Name="LeftPanelProcurementSortCombo"
                      Margin="0,0,0,16"
                      SelectionChanged="OnProcurementSortChanged">
                <ComboBoxItem Content="By World" IsSelected="True"/>
                <ComboBoxItem Content="By Name"/>
                <ComboBoxItem Content="By Cost (High to Low)"/>
            </ComboBox>

            <ui:Button Content="Conduct Analysis"
                       x:Name="LeftPanelProcurementAnalysisButton"
                       Appearance="Primary"
                       Margin="0,0,0,8"
                       HorizontalAlignment="Stretch"
                       Click="OnConductAnalysis"
                       IsEnabled="True"
                       ToolTip="Analyze using cached market data (fetch if needed)"/>
        </StackPanel>
    </ScrollViewer>
</UserControl>

<Window x:Class="FFXIV_Craft_Architect.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:ui="http://schemas.lepo.co/wpfui/2022/xaml"
        Title="FFXIV Craft Architect"
        Icon="pack://application:,,,/Resources/AppIcon.ico"
        Width="1600"
        Height="1000"
        WindowStartupLocation="CenterScreen"
        Background="#1e1e1e"
        xmlns:helpers="clr-namespace:FFXIV_Craft_Architect.Helpers"
        xmlns:modules="clr-namespace:FFXIV_Craft_Architect.Views.Modules">

    <Window.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="Resources/ThemeColors.xaml"/>
                <ResourceDictionary Source="Views/DataTemplates/MarketCardTemplates.xaml"/>
            </ResourceDictionary.MergedDictionaries>
            
            <!-- Local Window Resources -->
            <SolidColorBrush x:Key="GoldAccentBrush" Color="#d4a73a"/>
            <SolidColorBrush x:Key="CardBackgroundBrush" Color="#2d2d2d"/>
            <SolidColorBrush x:Key="TextPrimaryBrush" Color="#ffffff"/>
            <SolidColorBrush x:Key="TextSecondaryBrush" Color="#aaaaaa"/>
            <SolidColorBrush x:Key="SuccessBrush" Color="#4caf50"/>
        </ResourceDictionary>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto" />
            <RowDefinition Height="Auto" />
            <RowDefinition Height="*" />
            <RowDefinition Height="Auto" />
        </Grid.RowDefinitions>

        <!-- Title Bar with Menu -->
        <Border Grid.Row="0" 
                Background="#1a1a1a"
                BorderBrush="{StaticResource GoldAccentBrush}"
                BorderThickness="0,0,0,1"
                Padding="12,4">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                </Grid.ColumnDefinitions>

                <!-- Logo/Title -->
                <TextBlock Grid.Column="0" 
                           Text="FFXIV Craft Architect" 
                           FontSize="14"
                           FontWeight="Bold"
                           VerticalAlignment="Center"
                           Margin="0,0,24,0"
                           Foreground="{StaticResource GoldAccentBrush}"/>

                <!-- Navigation Tabs (like web) -->
                <StackPanel Grid.Column="1" 
                            Orientation="Horizontal"
                            VerticalAlignment="Center">
                    <Border x:Name="RecipePlannerTab"
                            Background="{StaticResource GoldAccentBrush}"
                            CornerRadius="4"
                            Padding="12,6"
                            Margin="0,0,8,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="OnRecipePlannerTabClick">
                        <TextBlock Text="RECIPE PLANNER" 
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="#1a1a1a"/>
                    </Border>
                    <Border x:Name="MarketAnalysisTab"
                            Background="Transparent"
                            CornerRadius="4"
                            Padding="12,6"
                            Margin="0,0,8,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="OnMarketAnalysisTabClick">
                        <TextBlock Text="MARKET ANALYSIS" 
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource GoldAccentBrush}"/>
                    </Border>
                    <Border x:Name="ProcurementPlannerTab"
                            Background="Transparent"
                            CornerRadius="4"
                            Padding="12,6"
                            Margin="0,0,16,0"
                            Cursor="Hand"
                            MouseLeftButtonDown="OnProcurementPlannerTabClick">
                        <TextBlock Text="PROCUREMENT PLAN" 
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource GoldAccentBrush}"/>
                    </Border>
                </StackPanel>

                <!-- Menu Bar -->
                <Menu Grid.Column="2" 
                      Background="Transparent"
                      VerticalAlignment="Center"
                      HorizontalAlignment="Left"
                      Padding="0"
                      FontSize="12">
                    <Menu.Resources>
                        <Style TargetType="MenuItem">
                            <Setter Property="Foreground" Value="#cccccc"/>
                            <Setter Property="Padding" Value="12,4"/>
                            <Style.Triggers>
                                <Trigger Property="IsHighlighted" Value="True">
                                    <Setter Property="Background" Value="{StaticResource GoldAccentBrush}"/>
                                    <Setter Property="Foreground" Value="#1a1a1a"/>
                                </Trigger>
                                <Trigger Property="IsMouseOver" Value="True">
                                    <Setter Property="Background" Value="{StaticResource GoldAccentBrush}"/>
                                    <Setter Property="Foreground" Value="#1a1a1a"/>
                                </Trigger>
                            </Style.Triggers>
                        </Style>
                    </Menu.Resources>

                    <MenuItem Header="File">
                        <MenuItem Header="New Plan" Command="{Binding RecipePlanner.ClearCommand}"/>
                        <MenuItem Header="Save Plan..." Command="{Binding RecipePlanner.SavePlanWithCheckCommand}" ToolTip="Save current plan to file. Shows message if no plan exists."/>
                        <MenuItem Header="Load Plans..." Command="{Binding RecipePlanner.LoadPlanCommand}"/>
                    </MenuItem>

                    <MenuItem Header="Import">
                        <MenuItem Header="From Craft Architect (Native)..." 
                                  Click="OnImportNative"
                                  ToolTip="Import from native .craftplan file (preserves all plan data)"/>
                        <Separator/>
                        <MenuItem Header="From Teamcraft (Text)..." 
                                  Command="{Binding RecipePlanner.ImportFromTeamcraftCommand}"
                                  ToolTip="Import from Teamcraft's Copy as Text feature"/>
                        <MenuItem Header="From Artisan (JSON)" 
                                  Click="OnImportArtisan"
                                  ToolTip="Import from Artisan export (reads clipboard)"/>
                    </MenuItem>

                    <MenuItem Header="Export">
                        <MenuItem Header="To Craft Architect (Native)..." 
                                  Click="OnExportNative"
                                  ToolTip="Export as native .craftplan file (preserves all plan data)"/>
                        <Separator/>
                        <MenuItem Header="To Teamcraft URL" 
                                  Click="OnExportTeamcraft"
                                  ToolTip="Export as Teamcraft URL (copied to clipboard)"/>
                        <MenuItem Header="To Artisan (JSON)" 
                                  Click="OnExportArtisan"
                                  ToolTip="Export as Artisan JSON (copied to clipboard)"/>
                        <Separator/>
                        <MenuItem Header="Copy as Plain Text" 
                                  Click="OnExportPlainText"
                                  ToolTip="Copy plan as text to clipboard"/>
                        <MenuItem Header="Copy as CSV" 
                                  Click="OnExportCsv"
                                  ToolTip="Copy shopping list as CSV to clipboard"/>
                    </MenuItem>

                    <MenuItem Header="Tools">
                        <MenuItem Header="Fetch Prices" Click="OnFetchPrices"/>
                        <MenuItem Header="View Plan Market Data" Click="OnViewMarketStatus" IsEnabled="False" x:Name="MenuViewMarketStatus"/>
                        <Separator/>
                        <MenuItem Header="View Blacklisted Worlds" Click="OnViewBlacklistedWorlds" ToolTip="View and manage temporarily blacklisted worlds"/>
                        <Separator/>
                        <MenuItem Header="Restart App" Click="OnRestartApp" ToolTip="Restart the application (preserves current plan)"/>
                        <Separator/>
                        <MenuItem Header="Debug Tools">
                            <MenuItem Header="View Logs" Click="OnViewLogs" ToolTip="Open the log viewer window"/>
                            <MenuItem Header="Cache Diagnostics..." Click="OnCacheDiagnostics" ToolTip="View market cache database contents"/>
                            <MenuItem Header="Debugging Options..." Click="OnDebugOptions" ToolTip="Open debugging settings"/>
                        </MenuItem>
                        <Separator/>
                        <MenuItem Header="Options..." Click="OnOptions"/>
                    </MenuItem>
                </Menu>
            </Grid>
        </Border>

        <!-- Hidden controls for backward compatibility (STILL USED BY CODE-BEHIND) -->
        <Border Grid.Row="1" Visibility="Collapsed">
            <StackPanel>
                <Border x:Name="RecipePlanTab"/>
                <Border x:Name="MarketLogisticsTab"/>
                <ComboBox x:Name="MarketSortCombo"/>
                <ComboBox x:Name="MarketModeCombo"/>
                <CheckBox x:Name="SearchAllNACheck"/>
                <ui:Button x:Name="ViewMarketStatusButton"/>
                <ui:Button x:Name="RefreshMarketButton"/>
                <Border x:Name="RecipePlanContent"/>
                <Border x:Name="MarketLogisticsContent"/>
                <StackPanel x:Name="MarketCards"/>
                <Expander x:Name="MarketSummaryExpander"/>
                <StackPanel x:Name="MarketSummaryContent"/>
                <TextBlock x:Name="MarketSummaryHeaderText"/>
            </StackPanel>
        </Border>

        <!-- Main Content Area -->
        <Grid Grid.Row="2" Margin="0,8,0,0">
            <Grid.ColumnDefinitions>
                <!-- Left: Project Items -->
                <ColumnDefinition Width="280" />
                <!-- Center: Recipe Plan -->
                <ColumnDefinition Width="*" />
                <!-- Right: Shopping List (Hidden - Procurement Planner holds this info) -->
                <ColumnDefinition Width="0" />
            </Grid.ColumnDefinitions>

            <!-- Left Panel: Project Items -->
            <Border Grid.Column="0" 
                    Background="Transparent"
                    Padding="16,8,16,16">
                <ScrollViewer VerticalScrollBarVisibility="Auto">
                    <StackPanel>
                        <!-- Recipe Planner Left Panel -->
                        <StackPanel x:Name="RecipePlannerLeftPanel">
                        <!-- Project Items Header -->
                        <TextBlock Text="Project Items" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource GoldAccentBrush}"
                                   Margin="0,0,0,16"/>

                        <!-- Item Name Search -->
                        <TextBlock Text="Item Name:" 
                                   Margin="0,0,0,4"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <ui:TextBox x:Name="ItemSearch"
                                    PlaceholderText="Enter item..."
                                    KeyDown="OnItemSearchKeyDown"
                                    Margin="0,0,0,8"/>

                        <ui:Button Content="Search"
                                   Appearance="Primary"
                                   Margin="0,0,0,20"
                                   HorizontalAlignment="Stretch"
                                   Click="OnSearchItem"
                                   helpers:ButtonAutoShrinkBehavior.EnableAutoShrink="True"/>

                        <!-- Search Results (hidden by default, shown when searching) -->
                        <Border x:Name="SearchResultsPanel"
                                Background="{StaticResource CardBackgroundBrush}"
                                CornerRadius="4"
                                Padding="8"
                                Margin="0,0,0,12"
                                Visibility="Collapsed">
                            <Grid>
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="*"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                <TextBlock Text="Search Results" 
                                           FontWeight="SemiBold"
                                           Margin="0,0,0,8"
                                           Foreground="{StaticResource GoldAccentBrush}"/>
                                <ListBox Grid.Row="1"
                                         x:Name="SearchResults"
                                         Background="Transparent"
                                         BorderThickness="0"
                                         MaxHeight="150"
                                         SelectionChanged="OnItemSelected"/>
                                <ui:Button Grid.Row="2"
                                           x:Name="AddToProjectButton"
                                           Content="Add to Project"
                                           Appearance="Primary"
                                           Margin="0,8,0,0"
                                           HorizontalAlignment="Stretch"
                                           IsEnabled="False"
                                           Click="OnAddToProject"/>
                            </Grid>
                        </Border>

                        <!-- Planned Acquisitions Section -->
                        <TextBlock Text="Planned Acquisitions" 
                                   FontSize="12"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   Margin="0,0,0,8"/>

                        <Border Background="{StaticResource CardBackgroundBrush}"
                                CornerRadius="4"
                                Padding="4,4,4,4"
                                Margin="0,0,0,8"
                                MinHeight="60">
                            <ListBox x:Name="ProjectList"
                                     Background="Transparent"
                                     BorderThickness="0"
                                     SelectionChanged="OnProjectItemSelected">
                                <ListBox.ItemTemplate>
                                    <DataTemplate>
                                        <Border Padding="2,1" Margin="0" BorderBrush="#3d3d3d" BorderThickness="0,0,0,1">
                                            <Grid>
                                                <Grid.ColumnDefinitions>
                                                    <ColumnDefinition Width="*" />
                                                    <ColumnDefinition Width="44" />
                                                    <ColumnDefinition Width="20" />
                                                </Grid.ColumnDefinitions>
                                                <TextBlock Grid.Column="0"
                                                           Text="{Binding Name}" 
                                                           VerticalAlignment="Center"
                                                           TextWrapping="Wrap"
                                                           MaxHeight="32"
                                                           FontSize="11"
                                                           LineHeight="14"
                                                           Margin="0,0,4,0"/>
                                                <TextBox Grid.Column="1"
                                                         Text="{Binding Quantity, Mode=TwoWay, UpdateSourceTrigger=LostFocus}"
                                                         VerticalAlignment="Center"
                                                         HorizontalContentAlignment="Center"
                                                         FontSize="11"
                                                         Height="18"
                                                         Padding="0"
                                                         GotFocus="OnQuantityGotFocus"
                                                         PreviewTextInput="OnQuantityPreviewTextInput"
                                                         LostFocus="OnQuantityChanged"/>
                                                <Button Grid.Column="2"
                                                        Content="Ã—"
                                                        Width="16"
                                                        Height="16"
                                                        FontSize="12"
                                                        Padding="0"
                                                        Margin="2,0,0,0"
                                                        Foreground="#ff6b6b"
                                                        Background="Transparent"
                                                        BorderThickness="0"
                                                        Click="OnRemoveProjectItem"
                                                        ToolTip="Remove item"/>
                                            </Grid>
                                        </Border>
                                    </DataTemplate>
                                </ListBox.ItemTemplate>
                            </ListBox>
                        </Border>

                        <TextBlock x:Name="QuickViewCountText"
                                   Text=""
                                   FontSize="10"
                                   Foreground="#888888"
                                   HorizontalAlignment="Right"
                                   Margin="0,-4,0,8"/>

                        <!-- Build Project Plan Button -->
                        <ui:Button x:Name="BuildPlanButton"
                                   Content="Build Project Plan"
                                   Appearance="Primary"
                                   Margin="0,8,0,8"
                                   HorizontalAlignment="Stretch"
                                   IsEnabled="False"
                                   Click="OnBuildProjectPlan"
                                   helpers:ButtonAutoShrinkBehavior.EnableAutoShrink="True"/>

                        <!-- Browse Plan Button -->
                        <ui:Button x:Name="BrowsePlanButton"
                                   Content="Browse Plan..."
                                   Appearance="Secondary"
                                   Margin="0,0,0,16"
                                   HorizontalAlignment="Stretch"
                                   IsEnabled="False"
                                   Click="OnBrowsePlan"
                                   ToolTip="Open plan browser to manage root items"
                                   helpers:ButtonAutoShrinkBehavior.EnableAutoShrink="True"/>

                        <!-- Quick Actions -->
                        <Grid Margin="0,8,0,0">
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="8" />
                                <ColumnDefinition Width="*" />
                            </Grid.ColumnDefinitions>

                            <ui:Button Grid.Column="0"
                                       Content="Save"
                                       Appearance="Success"
                                       HorizontalAlignment="Stretch"
                                       Command="{Binding RecipePlanner.SavePlanCommand}"
                                       helpers:ButtonAutoShrinkBehavior.EnableAutoShrink="True"/>

                            <ui:Button Grid.Column="2"
                                       Content="Export"
                                       Appearance="Info"
                                       HorizontalAlignment="Stretch"
                                       Command="{Binding RecipePlanner.ExportToPlainTextCommand}"
                                       helpers:ButtonAutoShrinkBehavior.EnableAutoShrink="True"/>
                        </Grid>

                    </StackPanel>
                    
                    <!-- Market Analysis Left Panel -->
                    <StackPanel x:Name="MarketAnalysisLeftPanel" Visibility="Collapsed">
                        <TextBlock Text="Market Analysis" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource GoldAccentBrush}"
                                   Margin="0,0,0,16"/>
                        
                        <TextBlock Text="View market data and shopping plans for your project items." 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,16"/>
                        
                        <ui:Button Content="Conduct Analysis"
                                   x:Name="LeftPanelConductAnalysisButton"
                                   Appearance="Primary"
                                   Margin="0,0,0,8"
                                   HorizontalAlignment="Stretch"
                                   Click="OnConductAnalysis"
                                   IsEnabled="True"
                                   ToolTip="Analyze using cached market data (fetch if needed)"/>
                        
                        <ui:Button Content="View Market Status"
                                   x:Name="LeftPanelViewMarketStatusButton"
                                   Appearance="Secondary"
                                   Margin="0,0,0,8"
                                   HorizontalAlignment="Stretch"
                                   Click="OnViewMarketStatus"
                                   IsEnabled="True"
                                   ToolTip="View detailed market data status"/>
                    </StackPanel>
                    
                    <!-- Procurement Planner Left Panel -->
                    <StackPanel x:Name="ProcurementPlannerLeftPanel" Visibility="Collapsed">
                        <TextBlock Text="Procurement Plan" 
                                   FontSize="16"
                                   FontWeight="SemiBold"
                                   Foreground="{StaticResource GoldAccentBrush}"
                                   Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Optimized shopping plan with world recommendations." 
                                   Foreground="{StaticResource TextSecondaryBrush}"
                                   TextWrapping="Wrap"
                                   Margin="0,0,0,16"/>
                        
                        <TextBlock Text="Sort By:" 
                                   Margin="0,0,0,4"
                                   Foreground="{StaticResource TextSecondaryBrush}"/>
                        <ComboBox x:Name="LeftPanelProcurementSortCombo"
                                  Margin="0,0,0,16"
                                  SelectionChanged="OnProcurementSortChanged">
                            <ComboBoxItem Content="By World" IsSelected="True"/>
                            <ComboBoxItem Content="By Name"/>
                            <ComboBoxItem Content="By Cost (High to Low)"/>
                        </ComboBox>
                        
                        <ui:Button Content="Conduct Analysis"
                                   x:Name="LeftPanelProcurementAnalysisButton"
                                   Appearance="Primary"
                                   Margin="0,0,0,8"
                                   HorizontalAlignment="Stretch"
                                   Click="OnConductAnalysis"
                                   IsEnabled="True"
                                   ToolTip="Analyze using cached market data (fetch if needed)"/>
                    </StackPanel>
                    </StackPanel>
                </ScrollViewer>
            </Border>

            <modules:RecipePlannerView x:Name="RecipePlannerModule" Grid.Column="1"/>
            <modules:MarketAnalysisView x:Name="MarketAnalysisModule" Grid.Column="1"/>
            <modules:ProcurementPlannerView x:Name="ProcurementPlannerModule" Grid.Column="1"/>

            <!-- Right Panel: Shopping List (Hidden - Procurement Planner holds this info) -->
            <Border Grid.Column="2" 
                    Background="Transparent"
                    Padding="8,8,16,16"
                    Visibility="Collapsed">
                <Grid>
                    <Grid.RowDefinitions>
                        <RowDefinition Height="Auto" />
                        <RowDefinition Height="*" />
                        <RowDefinition Height="Auto" />
                    </Grid.RowDefinitions>

                    <!-- Shopping List Header -->
                    <TextBlock Grid.Row="0"
                               Text="Shopping List" 
                               FontSize="16"
                               FontWeight="SemiBold"
                               Foreground="{StaticResource GoldAccentBrush}"
                               Margin="0,0,0,8"/>

                    <!-- Shopping List Content -->
                    <Border Grid.Row="1"
                            Background="{StaticResource CardBackgroundBrush}"
                            CornerRadius="4"
                            Padding="0">
                        <Grid>
                            <Grid.RowDefinitions>
                                <RowDefinition Height="Auto" />
                                <RowDefinition Height="*" />
                            </Grid.RowDefinitions>

                            <!-- Header Row -->
                            <Grid Grid.Row="0" 
                                  Background="#3d3d3d"
                                  Margin="0,0,0,1">
                                <Grid.ColumnDefinitions>
                                    <ColumnDefinition Width="*" />
                                    <ColumnDefinition Width="50" />
                                    <ColumnDefinition Width="80" />
                                </Grid.ColumnDefinitions>
                                <TextBlock Grid.Column="0" 
                                           Text="Item" 
                                           FontWeight="SemiBold"
                                           Padding="12,8"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="1" 
                                           Text="Qty" 
                                           FontWeight="SemiBold"
                                           Padding="4,8"
                                           HorizontalAlignment="Center"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                                <TextBlock Grid.Column="2" 
                                           Text="Price" 
                                           FontWeight="SemiBold"
                                           Padding="8,8"
                                           HorizontalAlignment="Right"
                                           Foreground="{StaticResource TextSecondaryBrush}"/>
                            </Grid>

                            <!-- Items List -->
                            <ScrollViewer Grid.Row="1" 
                                          VerticalScrollBarVisibility="Auto">
                                <StackPanel x:Name="ShoppingListPanel">
                                    <!-- Shopping list items populated dynamically -->
                                </StackPanel>
                            </ScrollViewer>
                        </Grid>
                    </Border>

                    <!-- Total Cost -->
                    <Border Grid.Row="2"
                            Background="{StaticResource CardBackgroundBrush}"
                            CornerRadius="4"
                            Padding="12,8"
                            Margin="0,8,0,0">
                        <StackPanel>
                            <TextBlock Text="Total Cost:" 
                                       Foreground="{StaticResource TextSecondaryBrush}"/>
                            <TextBlock x:Name="TotalCostText"
                                       Text="0g" 
                                       FontSize="18"
                                       FontWeight="Bold"
                                       Foreground="{StaticResource SuccessBrush}"
                                       HorizontalAlignment="Right"/>
                        </StackPanel>
                    </Border>
                </Grid>
            </Border>
        </Grid>

        <!-- Status Bar -->
        <Border Grid.Row="3" 
                Background="#1a1a1a"
                BorderBrush="{StaticResource GoldAccentBrush}"
                BorderThickness="0,1,0,0"
                Padding="12,6">
            <Grid>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="*" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                    <ColumnDefinition Width="Auto" />
                </Grid.ColumnDefinitions>

                <TextBlock Grid.Column="0"
                           x:Name="StatusLabel"
                           Text="Ready" 
                           Foreground="{StaticResource GoldAccentBrush}"
                           VerticalAlignment="Center"/>

                <!-- Market Total Cost (shown in split-pane view) -->
                <TextBlock Grid.Column="1"
                           x:Name="MarketTotalCostText"
                           Text="" 
                           Foreground="{StaticResource SuccessBrush}"
                           FontWeight="SemiBold"
                           VerticalAlignment="Center"
                           HorizontalAlignment="Right"
                           Margin="0,0,16,0"/>

                <!-- Status Icons -->
                <StackPanel Grid.Column="2" 
                            Orientation="Horizontal"
                            Margin="0,0,16,0">
                    <TextBlock x:Name="ItemsCountText"
                               Text="0 items" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               Margin="0,0,12,0"/>
                    <TextBlock x:Name="ProjectsCountText"
                               Text="0 projects" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"
                               Margin="0,0,12,0"/>
                    <TextBlock x:Name="DataCenterStatusText"
                               Text="No DC" 
                               Foreground="{StaticResource TextSecondaryBrush}"
                               FontSize="11"/>
                </StackPanel>
            </Grid>
        </Border>
    </Grid>
</Window>
